@model Market

@{
    ViewData["Title"] = "Update market";
}

<div class="row text">

     <div class="col-md-8 offset-2">
            <p>
                <h1>Update Market</h1>
            </p>
     </div>
    <div class="row">

        <div class="col-md-8 offset-2"> 

             <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group text-center">
                    <img id="LogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>

                <div class="form-group ">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="container-fluid" />
                         <span asp-validation-for="Logo" class="text-danger"></span>
                      </div>
                <div class="form-group ">
                            <label asp-for="Name" class="control-label"></label>
                             <input asp-for="Name" class="container-fluid" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                <div class="form-group ">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="container-fluid" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                      </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </form>
            
        </div>
    </div>


    @section Scripts{
        <script>

            $(document).ready(function () {
                var output = document.getElementById('LogoPreview');
                output.src = $("#Logo").val();
            })

            $("#Logo").on("change", function () {
                var output = document.getElementById('LogoPreview');
                output.src = $(this).val();
            })
        </script>
    }
